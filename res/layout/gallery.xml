<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:background="@android:color/white"
        android:scrollbars="none" >

        <RelativeLayout
            android:id="@+id/product_relative"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
            <LinearLayout
                android:id="@+id/croll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical"
                android:padding="10dp" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:background="@color/orange"
                    android:padding="1dp" >
                </RelativeLayout>

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/orange"
                    android:padding="1dp" >

                    <ImageView
                        android:id="@+id/test_photo1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:adjustViewBounds="true"
                       
                        android:contentDescription="@string/app_name"
                        android:scaleType="centerCrop"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/orange"
                    android:padding="1dp" >

                    <ImageView
                        android:id="@+id/test_photo2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/image16"
                        android:contentDescription="@string/app_name"
                        android:scaleType="centerCrop"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/orange"
                    android:padding="1dp" >

                    <ImageView
                        android:id="@+id/test_photo3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/image5"
                        android:contentDescription="@string/app_name"
                        android:scaleType="centerCrop"
                        android:visibility="gone" />

                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/test_image1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:adjustViewBounds="true"
                android:background="@drawable/bg"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop" />
            <ImageView
                android:id="@+id/productdetail_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
               android:adjustViewBounds="true"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/app_name"
                android:background="@drawable/bg"
               android:scaleType="centerCrop" />

            <LinearLayout
                android:id="@+id/informations_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/croll"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/productdetail_image"
                android:background="@android:color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="1dp" >

                <TextView
                    android:id="@+id/_business"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="BUY NOW"
                    android:textColor="@color/orange"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/_croll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/informations_container"
                android:layout_marginTop="5dp"
                android:background="@color/feed_bg"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/_pinfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="PRODUCT INFO"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/_cinfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="REVIEW"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/_binfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="SPECIFICATION"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- cheat code: negative margin -->

            <LinearLayout
                android:id="@+id/_personalInfo"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/_croll"
                android:background="@android:color/transparent"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="2dp"
                android:visibility="visible" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/productdetail_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@android:color/white"
                        android:padding="5dp"
                        android:text="Key Features of Ng Stunners Artistic Eye Vinyl Laptop Decal "
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:background="@android:color/white"
                        android:padding="0dp"
                        android:text="
    Easy to Stick
    Glue Free Removal
    Matte Lamination
    Customize from 14 inch upto 17 Inch Laptops
"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@android:color/white"
                        android:padding="5dp"
                        android:text="Ng Stunners Artistic Eye Vinyl Laptop Decal (Laptop) Price: Rs. 208 "
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:background="@android:color/white"
                        android:padding="5dp"
                        android:text="NG Stunners have Amazing hand picked designes with high quality Vinyls. 10x16Inch Length  Breadth gives custom size option. Suitable for laptop which are 15inch and above"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@android:color/white"
                        android:padding="5dp"
                        android:text="Specifications of Ng Stunners Artistic Eye Vinyl Laptop Decal (Laptop)"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:background="@android:color/white"
                        android:padding="5dp"
                        android:text="Brand 	Ng Stunners
Keyboard Skin Included 	No
Laptop Size 	15.6 inch
Customize Size 	Yes
Material 	Vinyl
Finish 	Matte
Transparent Look 	No
Character 	Artistic Eye
Color 	Multicolor
Utility 	Resistant, Waterproof
Suitable For 	Laptop
Theme 	Automobiles, Comics and Cartoons, Ethnic, Famous Personalities, Festivals  Occasions, Graffiti, Illustrations, Movies, Music, NA, Nature, Patterns, Signs  Symbols, Solids, Spiritual, Sports, Superheroes, TV Series, Tattoo, Typography, Vintage
Model Name 	Artistic Eye
Reusable 	Yes "
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/personal_details"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@android:color/white"
                        android:padding="5dp"
                        android:text=":  "
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/business1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@android:color/white"
                        android:padding="5dp"
                        android:text=":  Business"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/foundation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@android:color/white"
                        android:padding="5dp"
                        android:text=":  Business Day"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/dob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="#99000000"
                        android:padding="5dp"
                        android:text=":  Date of Birth"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="#99000000"
                        android:padding="5dp"
                        android:text=":  Gender "
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/mstatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="#99000000"
                        android:padding="5dp"
                        android:text=":  Marital Status"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contactInfo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/_croll"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@android:color/white"
                        android:padding="5dp"
                        android:text="Email"
                        android:textColor="#FF707070" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@android:color/white"
                        android:padding="5dp"
                        android:text="Mobile"
                        android:textColor="#FF707070" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@android:color/white"
                        android:padding="5dp"
                        android:text="Office Phone"
                        android:textColor="#FF707070" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@android:color/white"
                        android:padding="5dp"
                        android:text="Country"
                        android:textColor="#FF707070" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@android:color/white"
                        android:padding="5dp"
                        android:text="State"
                        android:textColor="#FF707070" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@android:color/white"
                        android:padding="5dp"
                        android:text="City"
                        android:textColor="#FF707070" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@android:color/white"
                        android:padding="5dp"
                        android:text="Address"
                        android:textColor="#FF707070" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@android:color/white"
                        android:padding="5dp"
                        android:text="ZipCode"
                        android:textColor="#FF707070" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@android:color/white"
                        android:padding="5dp"
                        android:text="Website"
                        android:textColor="#FF707070" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/contact_details"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/e_mail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@android:color/white"
                        android:padding="5dp"
                        android:text=":  Email "
                        android:textColor="#FF707070" />

                    <TextView
                        android:id="@+id/p_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@android:color/white"
                        android:padding="5dp"
                        android:text=":  Mobile "
                        android:textColor="#FF707070" />

                    <TextView
                        android:id="@+id/Officephone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@android:color/white"
                        android:padding="5dp"
                        android:text=":  Office Phone"
                        android:textColor="#FF707070" />

                    <TextView
                        android:id="@+id/p_country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@android:color/white"
                        android:padding="5dp"
                        android:text=":  Country "
                        android:textColor="#FF707070" />

                    <TextView
                        android:id="@+id/p_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@android:color/white"
                        android:padding="5dp"
                        android:text=":  State  "
                        android:textColor="#FF707070" />

                    <TextView
                        android:id="@+id/p_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@android:color/white"
                        android:padding="5dp"
                        android:text=":  City "
                        android:textColor="#FF707070" />

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@android:color/white"
                        android:padding="5dp"
                        android:text=":  Address"
                        android:textColor="#FF707070" />

                    <TextView
                        android:id="@+id/zipcode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@android:color/white"
                        android:padding="5dp"
                        android:text=":  ZipCode"
                        android:textColor="#FF707070" />

                    <TextView
                        android:id="@+id/website"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:autoLink="web"
                        android:background="@android:color/white"
                        android:padding="5dp"
                        android:text=":  Website"
                        android:textColor="#FF707070" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/businessInfo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/_croll"
                android:orientation="vertical"
                android:padding="5dp"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@android:color/white"
                    android:padding="5dp"
                    android:text="About Me"
                    android:textColor="#FF707070"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/about_me"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@android:color/white"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="#FF707070" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@android:color/white"
                    android:padding="5dp"
                    android:text="My Business"
                    android:textColor="#FF707070"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/my_business"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@android:color/white"
                    android:padding="5dp"
                    android:textColor="#FF707070" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@android:color/white"
                    android:padding="5dp"
                    android:text="Industry "
                    android:textColor="#FF707070"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/industry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@android:color/white"
                    android:padding="5dp"
                    android:textColor="#FF707070" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>