<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/categoryItem"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bgs"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/btnLogin"
        android:layout_width="@dimen/screen_display_size"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signin"
        android:layout_gravity="center"
        android:layout_marginTop="250dp"
        android:background="#526A96"
        android:drawableLeft="@drawable/join"
        android:drawableStart="@drawable/join"
        android:gravity="center"
        android:text="Login with Facebook"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/signin"
        android:layout_width="@dimen/screen_display_size"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnLogin"
        android:layout_below="@+id/imageView1"
        android:layout_gravity="center"
        android:layout_marginTop="275dp"
        android:background="#E84C3D"
        android:drawableLeft="@drawable/joing"
        android:drawableStart="@drawable/joing"
        android:gravity="center"
        android:text="Login with Google+"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:text="or"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="@dimen/screen_display_size"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignRight="@+id/editText2"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:drawableLeft="@drawable/profile_icon"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#000000" android:hint="Email Address" android:textAlignment="center">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="@dimen/screen_display_size"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/first"
        android:layout_below="@+id/editText1"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/password_icon"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#000000" android:textAlignment="center" android:password="false"/>

    <LinearLayout
        android:id="@+id/first"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="0dp" android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/shopnow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autoText="false"
            android:gravity="center"
            android:onClick="signinEstore"
            android:text="Sign In"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:clickable="true"
            
            android:textStyle="bold"
             />

        <TextView
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="EstoreRegister"
            android:text="Register"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black"
             android:clickable="true"
            
            android:textSize="13sp"                    
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>