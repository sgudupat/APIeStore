<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <LinearLayout
        android:id="@+id/profile_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/profile_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Update Profile" android:textSize="40px" android:textStyle="bold"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/profile_layout1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/profile_layout" >

        <EditText
            android:id="@+id/profile_mobile"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/profile_Email"
            android:layout_marginTop="18dp"
            android:background="#526A96"
            android:ems="10"
            android:gravity="center"
            android:hint="Mobile" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="58dp"
            android:background="#526A96"
            android:gravity="center"
            android:hint="Name" />

        <EditText
            android:id="@+id/profile_Email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/profile_name"
            android:layout_marginTop="16dp"
            android:background="#526A96"
            android:ems="10"
            android:gravity="center"
            android:hint="Email" />

        <Button
            android:id="@+id/profile_updatebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_mobile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:onClick="profile"
            android:text="Update" />

    </RelativeLayout>

</RelativeLayout>