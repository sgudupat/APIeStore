<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/fp_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/fp_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Forgot Password?" android:textSize="40px" android:textStyle="bold"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/fp_layout1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/fp_layout"
        android:layout_marginTop="14dp" >

        <EditText
            android:id="@+id/fp_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Name"
            android:layout_marginTop="79dp" android:layout_alignParentTop="true"
           />

        <EditText
            android:id="@+id/fp_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Email" android:layout_alignParentStart="true"
            android:layout_below="@+id/fp_name" android:layout_alignParentLeft="true"/>

        <EditText
            android:id="@+id/fp_Mobile"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Mobile" android:layout_below="@+id/fp_email" android:layout_alignParentLeft="true"/>

        <Button
            android:id="@+id/fp_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ForgotPassword"
            android:onClick="validateUser"
            android:layout_below="@+id/fp_Mobile" android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</RelativeLayout>